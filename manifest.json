{
    "manifest_version": 3,
    "name": "DeepLearning.AI Contextual Translator",
    "version": "1.0.0",
    "description": "Real-time, context-aware Korean translations for DeepLearning.AI and Coursera.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://*.deeplearning.ai/*",
        "https://*.coursera.org/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "DeepL.AI Translator"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.deeplearning.ai/*",
                "https://*.coursera.org/*"
            ],
            "js": [
                "content_scripts/extractor.js",
                "content_scripts/translator_client.js",
                "content_scripts/ui_injector.js"
            ],
            "css": [
                "styles/overlay.css"
            ]
        }
    ]
}